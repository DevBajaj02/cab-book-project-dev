<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="140dp"
        android:layout_height="match_parent"
        android:src="@drawable/category_wallpaper"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/suv_card_view"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="25dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="@color/yellow"
        android:rotation="45"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/suv_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/suv_icon"
            android:rotation="-45"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hatch_card_view"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="25dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/suv_card_view"
        card_view:cardBackgroundColor="@color/yellow"
        android:rotation="45"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/hatch_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/hatch_back"
            android:rotation="-45"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sedan_card_view"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="25dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/hatch_card_view"
        card_view:cardBackgroundColor="@color/yellow"
        android:rotation="45"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/sedan_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/sedan"
            android:rotation="-45"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/auto_card_view"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="25dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/sedan_card_view"
        card_view:cardBackgroundColor="@color/yellow"
        android:rotation="45"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/auto_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/auto"
            android:rotation="-45"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginHorizontal="40dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/next_bttn"
        app:cardElevation="150dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Next"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/gotham_medium"
        android:textSize="25sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/suv_desc_view"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:alpha="0.75"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="180dp"
        card_view:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SUV"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rates : 30Rs/km"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/gotham_medium"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@id/suv_desc_view"
            app:layout_constraintLeft_toLeftOf="@id/suv_desc_view"
            app:layout_constraintRight_toRightOf="@id/suv_desc_view"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hatch_desc_view"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:alpha="0.75"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/suv_desc_view"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="180dp"
        card_view:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hatch Back"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rates : 20Rs/km"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/gotham_medium"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@id/suv_desc_view"
            app:layout_constraintLeft_toLeftOf="@id/suv_desc_view"
            app:layout_constraintRight_toRightOf="@id/suv_desc_view"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sedan_desc_view"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:alpha="0.75"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/hatch_desc_view"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="180dp"
        card_view:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sedan"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rates : 25Rs/km"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/gotham_medium"
            app:layout_constraintTop_toTopOf="@id/suv_desc_view"
            app:layout_constraintLeft_toLeftOf="@id/suv_desc_view"
            app:layout_constraintRight_toRightOf="@id/suv_desc_view"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/auto_desc_view"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:alpha="0.75"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@id/sedan_desc_view"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="180dp"
        card_view:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rikshaw"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rates : 5Rs/km"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/gotham_medium"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@id/suv_desc_view"
            app:layout_constraintLeft_toLeftOf="@id/suv_desc_view"
            app:layout_constraintRight_toRightOf="@id/suv_desc_view"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
